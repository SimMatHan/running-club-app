rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read any user data but only write to their own user document
    match /users/{userId} {
      allow read: if request.auth != null;  // Allow reading all user documents
      allow write: if request.auth != null && request.auth.uid == userId;  // Allow writing only to the user's own document
    }

    // Allow authenticated users to read and write to the arrangements collection
    match /arrangements/{arrangementId} {
      allow read, write: if request.auth != null;
    }
  }
}
